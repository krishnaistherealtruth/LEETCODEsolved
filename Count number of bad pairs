class Solution {
    public long countBadPairs(int[] nums) {
        Map<Integer,Integer> map=new HashMap<>();
        long n=nums.length;
        long good=0;
        for(int i=0;i<nums.length;i++){
            good+=map.getOrDefault(nums[i]-i,0);
            map.put(nums[i]-i,map.getOrDefault(nums[i]-i,0)+1);
        }
        return ((n*(n-1))/2)-good;
    }
}
